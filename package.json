{
  "name": "@sudobility/auth_lib",
  "version": "0.0.20",
  "description": "Firebase authentication utilities with token refresh handling",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "react-native": {
        "import": "./dist/index.rn.js",
        "types": "./dist/index.rn.d.ts"
      },
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx eslint src",
    "lint:fix": "bunx eslint src --fix",
    "format": "bunx prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "bun run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "firebase": "^12.7.0",
    "@react-native-firebase/app": ">=18.0.0",
    "@react-native-firebase/auth": ">=18.0.0",
    "@sudobility/di": "^1.5.25",
    "@sudobility/types": "^1.9.48",
    "@tanstack/react-query": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "firebase": {
      "optional": true
    },
    "@react-native-firebase/app": {
      "optional": true
    },
    "@react-native-firebase/auth": {
      "optional": true
    }
  },
  "devDependencies": {
    "@sudobility/types": "^1.9.48",
    "@tanstack/react-query": "^5.80.7",
    "@types/node": "^22.0.0",
    "vitest": "^4.0.4",
    "@eslint/js": "^9.0.0",
    "@types/bun": "^1.2.8",
    "@types/react": "^19.2.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sudobility/auth_lib.git"
  },
  "license": "MIT"
}
